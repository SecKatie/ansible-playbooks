# Immich Server Deployment
apiVersion: apps/v1
kind: Deployment
metadata:
  name: immich-server
  namespace: "{{ immich_namespace }}"
  labels:
    app.kubernetes.io/name: immich-server
    app.kubernetes.io/instance: immich
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: server
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "Immich photo management server"
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: immich-server
      app.kubernetes.io/instance: immich
  replicas: 1
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: immich-server
        app.kubernetes.io/instance: immich
        app.kubernetes.io/part-of: photos
        app.kubernetes.io/component: server
        app.kubernetes.io/managed-by: ansible
    spec:
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 100
              preference:
                matchExpressions:
                  - key: node-role.kubernetes.io/control-plane
                    operator: DoesNotExist
{% if immich_node_selector is defined %}
      nodeSelector:
{% for key, value in immich_node_selector.items() %}
        {{ key }}: "{{ value }}"
{% endfor %}
{% endif %}
      containers:
      - name: immich-server
        image: {{ immich_server_image }}:{{ immich_version }}
        ports:
        - containerPort: 2283
          name: http
          protocol: TCP
        env:
        # Database configuration
        - name: DB_HOSTNAME
          value: "immich-postgres.{{ immich_namespace }}.svc.cluster.local"
        - name: DB_PORT
          value: "5432"
        - name: DB_DATABASE_NAME
          value: "immich"
        - name: DB_USERNAME
          valueFrom:
            secretKeyRef:
              name: immich-secrets
              key: postgres-user
        - name: DB_PASSWORD
          valueFrom:
            secretKeyRef:
              name: immich-secrets
              key: postgres-password
        # Redis configuration
        - name: REDIS_HOSTNAME
          value: "immich-redis.{{ immich_namespace }}.svc.cluster.local"
        - name: REDIS_PORT
          value: "6379"
        # Upload location (inside container)
        - name: UPLOAD_LOCATION
          value: "/data"
        # Machine Learning URL
{% if immich_ml_enabled | default(true) %}
        - name: IMMICH_MACHINE_LEARNING_URL
          value: "http://immich-ml.{{ immich_namespace }}.svc.cluster.local:3003"
{% else %}
        - name: IMMICH_MACHINE_LEARNING_ENABLED
          value: "false"
{% endif %}
        # Timezone
        - name: TZ
          value: "America/New_York"
        resources:
          requests:
            cpu: {{ immich_server_cpu_request }}
            memory: {{ immich_server_memory_request }}
          limits:
            cpu: {{ immich_server_cpu_limit }}
            memory: {{ immich_server_memory_limit }}
        volumeMounts:
        - name: library
          mountPath: /data
        - name: localtime
          mountPath: /etc/localtime
          readOnly: true
        livenessProbe:
          httpGet:
            path: /api/server/ping
            port: 2283
          initialDelaySeconds: 60
          periodSeconds: 30
          timeoutSeconds: 10
        readinessProbe:
          httpGet:
            path: /api/server/ping
            port: 2283
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 5
      volumes:
      - name: library
        persistentVolumeClaim:
          claimName: immich-library-pvc
      - name: localtime
        hostPath:
          path: /etc/localtime
          type: File
---

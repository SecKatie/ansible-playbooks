---
# PostgreSQL Deployment (with VectorChord for smart search)
apiVersion: apps/v1
kind: Deployment
metadata:
  name: immich-postgres
  namespace: "{{ immich_namespace }}"
  labels:
    app.kubernetes.io/name: immich-postgres
    app.kubernetes.io/instance: immich
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: database
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "PostgreSQL database with VectorChord for Immich"
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: immich-postgres
      app.kubernetes.io/instance: immich
  replicas: 1
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: immich-postgres
        app.kubernetes.io/instance: immich
        app.kubernetes.io/part-of: photos
        app.kubernetes.io/component: database
        app.kubernetes.io/managed-by: ansible
    spec:
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 100
              preference:
                matchExpressions:
                  - key: node-role.kubernetes.io/control-plane
                    operator: DoesNotExist
{% if immich_node_selector is defined %}
      nodeSelector:
{% for key, value in immich_node_selector.items() %}
        {{ key }}: "{{ value }}"
{% endfor %}
{% endif %}
      containers:
      - name: postgres
        image: {{ immich_postgres_image }}:{{ immich_postgres_version }}
        ports:
        - containerPort: 5432
          name: postgres
          protocol: TCP
        env:
        - name: POSTGRES_DB
          value: "immich"
        - name: POSTGRES_USER
          valueFrom:
            secretKeyRef:
              name: immich-secrets
              key: postgres-user
        - name: POSTGRES_PASSWORD
          valueFrom:
            secretKeyRef:
              name: immich-secrets
              key: postgres-password
        - name: POSTGRES_INITDB_ARGS
          value: "--data-checksums"
        - name: PGDATA
          value: "/var/lib/postgresql/data/pgdata"
        resources:
          requests:
            cpu: {{ immich_postgres_cpu_request }}
            memory: {{ immich_postgres_memory_request }}
          limits:
            cpu: {{ immich_postgres_cpu_limit }}
            memory: {{ immich_postgres_memory_limit }}
        volumeMounts:
        - name: postgres-data
          mountPath: /var/lib/postgresql/data
        livenessProbe:
          exec:
            command:
            - /bin/sh
            - -c
            - pg_isready -U $POSTGRES_USER -d immich
          initialDelaySeconds: 30
          periodSeconds: 10
          timeoutSeconds: 5
        readinessProbe:
          exec:
            command:
            - /bin/sh
            - -c
            - pg_isready -U $POSTGRES_USER -d immich
          initialDelaySeconds: 5
          periodSeconds: 5
          timeoutSeconds: 3
      volumes:
      - name: postgres-data
        persistentVolumeClaim:
          claimName: immich-postgres-pvc
---
# PostgreSQL Service
apiVersion: v1
kind: Service
metadata:
  name: immich-postgres
  namespace: "{{ immich_namespace }}"
  labels:
    app.kubernetes.io/name: immich-postgres
    app.kubernetes.io/instance: immich
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: database
    app.kubernetes.io/managed-by: ansible
spec:
  type: ClusterIP
  ports:
  - port: 5432
    targetPort: 5432
    protocol: TCP
    name: postgres
  selector:
    app.kubernetes.io/name: immich-postgres
    app.kubernetes.io/instance: immich

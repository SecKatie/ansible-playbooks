---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: homepage
  namespace: {{ homepage_namespace }}
  labels:
    app.kubernetes.io/name: homepage
    app.kubernetes.io/part-of: dashboard
    app.kubernetes.io/managed-by: ansible
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`{{ homepage_ingress_host }}`)
      kind: Rule
      services:
        - name: homepage
          port: 3000
  tls:
    certResolver: cloudflare
    domains:
      - main: corp.mulliken.net
        sans:
          - "*.corp.mulliken.net"

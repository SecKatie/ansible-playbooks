---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: homepage
  namespace: {{ homepage_namespace }}
  labels:
    app.kubernetes.io/name: homepage
    app.kubernetes.io/part-of: dashboard
    app.kubernetes.io/managed-by: ansible
spec:
  ingressClassName: traefik
  tls:
    - hosts:
        - {{ homepage_ingress_host }}
      secretName: {{ homepage_tls_secret_name }}
  rules:
    - host: {{ homepage_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: homepage
                port:
                  number: 3000

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: homepage
  namespace: {{ homepage_namespace }}
  labels:
    app.kubernetes.io/name: homepage
    app.kubernetes.io/part-of: dashboard
    app.kubernetes.io/managed-by: ansible
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kubernetes.io/name: homepage
  template:
    metadata:
      labels:
        app.kubernetes.io/name: homepage
        app.kubernetes.io/part-of: dashboard
        app.kubernetes.io/managed-by: ansible
    spec:
      serviceAccountName: homepage
      automountServiceAccountToken: true
      initContainers:
        - name: copy-config
          image: busybox:latest
          command:
            - sh
            - -c
            - |
              cp /config-source/*.yaml /app/config/
              mkdir -p /app/config/logs
          volumeMounts:
            - name: config-source
              mountPath: /config-source
            - name: config
              mountPath: /app/config
      containers:
        - name: homepage
          image: {{ homepage_image }}
          ports:
            - name: http
              containerPort: 3000
              protocol: TCP
          env:
            - name: HOMEPAGE_ALLOWED_HOSTS
              value: "{{ homepage_ingress_host }}"
          envFrom:
            - secretRef:
                name: homepage-secrets
          resources:
            requests:
              cpu: {{ homepage_cpu_request }}
              memory: {{ homepage_memory_request }}
            limits:
              cpu: {{ homepage_cpu_limit }}
              memory: {{ homepage_memory_limit }}
          readinessProbe:
            httpGet:
              path: /
              port: http
            initialDelaySeconds: 5
            periodSeconds: 10
          livenessProbe:
            httpGet:
              path: /
              port: http
            initialDelaySeconds: 15
            periodSeconds: 30
          volumeMounts:
            - name: config
              mountPath: /app/config
{% if homepage_icons_enabled | default(true) %}
            - name: icons
              mountPath: /app/public/icons
{% endif %}
{% if homepage_images_enabled | default(true) %}
            - name: images
              mountPath: /app/public/images
{% endif %}
      volumes:
        - name: config-source
          configMap:
            name: homepage-config
        - name: config
          emptyDir: {}
{% if homepage_icons_enabled | default(true) %}
        - name: icons
          persistentVolumeClaim:
            claimName: homepage-icons-pvc
{% endif %}
{% if homepage_images_enabled | default(true) %}
        - name: images
          persistentVolumeClaim:
            claimName: homepage-images-pvc
{% endif %}

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: headlamp
  namespace: {{ headlamp_namespace }}
  labels:
    app.kubernetes.io/name: headlamp
    app.kubernetes.io/managed-by: ansible
spec:
  ingressClassName: traefik
  tls:
    - hosts:
        - {{ headlamp_ingress_host }}
      secretName: {{ headlamp_tls_secret_name }}
  rules:
    - host: {{ headlamp_ingress_host }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ headlamp_release_name }}
                port:
                  number: {{ headlamp_service_port }}

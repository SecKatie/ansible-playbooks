---
# PVC for custom icons
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: homepage-icons-pvc
  namespace: {{ homepage_namespace }}
  labels:
    app.kubernetes.io/name: homepage
    app.kubernetes.io/part-of: dashboard
    app.kubernetes.io/component: icons
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ homepage_icons_storage_class }}
  resources:
    requests:
      storage: {{ homepage_icons_storage_size }}
{% if homepage_images_enabled | default(true) %}
---
# PVC for background images
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: homepage-images-pvc
  namespace: {{ homepage_namespace }}
  labels:
    app.kubernetes.io/name: homepage
    app.kubernetes.io/part-of: dashboard
    app.kubernetes.io/component: images
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ homepage_images_storage_class }}
  resources:
    requests:
      storage: {{ homepage_images_storage_size }}
{% endif %}

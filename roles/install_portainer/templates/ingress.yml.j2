---
apiVersion: traefik.io/v1alpha1
kind: ServersTransport
metadata:
  name: portainer-transport
  namespace: {{ portainer_namespace }}
spec:
  insecureSkipVerify: true
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: portainer
  namespace: {{ portainer_namespace }}
  labels:
    app.kubernetes.io/name: portainer
    app.kubernetes.io/managed-by: ansible
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`{{ portainer_ingress_host }}`)
      kind: Rule
      services:
        - name: {{ portainer_release_name }}
          port: {{ portainer_service_port }}
          scheme: https
          serversTransport: portainer-transport
  tls:
    certResolver: {{ portainer_tls_cert_resolver }}
    domains:
      - main: {{ portainer_tls_domain }}
        sans:
          - "*.{{ portainer_tls_domain }}"

---
# NFS Persistent Volume for media (shared with Jellyfin)
apiVersion: v1
kind: PersistentVolume
metadata:
  name: sonarr-media-pv
  labels:
    app.kubernetes.io/name: sonarr
    app.kubernetes.io/part-of: media
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  capacity:
    storage: {{ media_nfs_storage }}
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: nfs-media
  nfs:
    server: {{ media_nfs_server }}
    path: {{ media_nfs_path }}
---
# PVC for NFS media (shared with Jellyfin)
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: sonarr-media-pvc
  namespace: {{ media_namespace }}
  labels:
    app.kubernetes.io/name: sonarr
    app.kubernetes.io/part-of: media
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: nfs-media
  resources:
    requests:
      storage: {{ media_nfs_storage }}

---
# NFS PersistentVolume for Paperless documents and data
apiVersion: v1
kind: PersistentVolume
metadata:
  name: paperless-nfs-pv
  labels:
    app.kubernetes.io/name: paperless
    app.kubernetes.io/instance: paperless
    app.kubernetes.io/part-of: documents
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  capacity:
    storage: {{ paperless_nfs_size }}
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: nfs-paperless
  nfs:
    server: "{{ nfs_server }}"
    path: "{{ nfs_path }}"
---
# NFS PersistentVolumeClaim for Paperless
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: paperless-nfs-pvc
  namespace: "{{ paperless_namespace }}"
  labels:
    app.kubernetes.io/name: paperless
    app.kubernetes.io/instance: paperless
    app.kubernetes.io/part-of: documents
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: nfs-paperless
  resources:
    requests:
      storage: {{ paperless_nfs_size }}

---
apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: letsencrypt-prod
spec:
  acme:
    email: {{ cert_manager_acme_email }}
    server: {{ cert_manager_acme_server }}
    privateKeySecretRef:
      name: letsencrypt-prod-account-key
    solvers:
      - dns01:
          cloudflare:
            apiTokenSecretRef:
              name: {{ cert_manager_cloudflare_api_token_secret_name }}
              key: {{ cert_manager_cloudflare_api_token_secret_key }}

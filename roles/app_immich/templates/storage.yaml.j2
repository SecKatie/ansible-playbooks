---
# NFS Persistent Volume for photos/videos
apiVersion: v1
kind: PersistentVolume
metadata:
  name: immich-library-pv
  labels:
    app.kubernetes.io/name: immich
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  capacity:
    storage: {{ immich_nfs_storage }}
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: nfs-immich
  nfs:
    server: {{ immich_nfs_server }}
    path: {{ immich_nfs_path }}
---
# PVC for NFS library storage
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: immich-library-pvc
  namespace: {{ immich_namespace }}
  labels:
    app.kubernetes.io/name: immich
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: nfs-immich
  resources:
    requests:
      storage: {{ immich_nfs_storage }}
---
# PVC for PostgreSQL data
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: immich-postgres-pvc
  namespace: {{ immich_namespace }}
  labels:
    app.kubernetes.io/name: immich-postgres
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: database
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ immich_storage_class }}
  resources:
    requests:
      storage: {{ immich_postgres_storage }}
---
# PVC for Machine Learning cache
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: immich-ml-cache-pvc
  namespace: {{ immich_namespace }}
  labels:
    app.kubernetes.io/name: immich-ml
    app.kubernetes.io/part-of: photos
    app.kubernetes.io/component: machine-learning
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ immich_storage_class }}
  resources:
    requests:
      storage: {{ immich_ml_cache_storage }}

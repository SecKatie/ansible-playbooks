---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: plane
  namespace: {{ plane_namespace }}
  labels:
    app.kubernetes.io/name: plane
    app.kubernetes.io/part-of: plane
    app.kubernetes.io/managed-by: ansible
spec:
  ingressClassName: {{ plane_ingress_class }}
  tls:
    - hosts:
        - {{ plane_domain }}
      secretName: {{ plane_tls_secret_name }}
  rules:
    - host: {{ plane_domain }}
      http:
        paths:
          # API routes
          - path: /api
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-api
                port:
                  number: 8000
          # Auth routes
          - path: /auth
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-api
                port:
                  number: 8000
          # Live collaboration
          - path: /live
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-live
                port:
                  number: 3000
          # Spaces (public pages)
          - path: /spaces
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-space
                port:
                  number: 3000
          # Admin panel (god-mode)
          - path: /god-mode
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-admin
                port:
                  number: 3000
          # File uploads (minio)
          - path: /uploads
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-minio
                port:
                  number: 9000
          # Default - web frontend (must be last)
          - path: /
            pathType: Prefix
            backend:
              service:
                name: {{ plane_release_name }}-web
                port:
                  number: 3000

---
apiVersion: helm.cattle.io/v1
kind: HelmChartConfig
metadata:
  name: traefik
  namespace: kube-system
spec:
  valuesContent: |-
    # Enable Gateway API provider
    providers:
      kubernetesGateway:
        enabled: true
    # Install Gateway API CRDs and configure gateway
    gateway:
      enabled: true
      listeners:
        web:
          port: 8000
          protocol: HTTP
          namespacePolicy:
            from: All
        websecure:
          port: 8443
          protocol: HTTPS
          namespacePolicy:
            from: All
          certificateRefs:
            - name: wildcard-corp-tls
    # Increase timeouts for large file uploads (photos/videos)
    ports:
      websecure:
        transport:
          respondingTimeouts:
            readTimeout: 600s
            writeTimeout: 600s
            idleTimeout: 600s
{% if traefik_dashboard_enabled | default(true) %}
      traefik:
        expose:
          default: true
    # Enable Traefik Dashboard and API
    api:
      dashboard: true
      insecure: true
    ingressRoute:
      dashboard:
        enabled: true
        matchRule: Host(`{{ traefik_dashboard_host }}`)
        entryPoints:
          - websecure
        tls:
          secretName: wildcard-corp-tls
{% endif %}
    additionalArguments:
{% if traefik_dashboard_enabled | default(true) %}
      - "--api.insecure=true"
{% endif %}
      - "--certificatesresolvers.{{ traefik_acme_resolver }}.acme.email={{ traefik_acme_email }}"
      - "--certificatesresolvers.{{ traefik_acme_resolver }}.acme.storage=/data/acme.json"
      - "--certificatesresolvers.{{ traefik_acme_resolver }}.acme.dnschallenge=true"
      - "--certificatesresolvers.{{ traefik_acme_resolver }}.acme.dnschallenge.provider=cloudflare"
      - "--certificatesresolvers.{{ traefik_acme_resolver }}.acme.dnschallenge.resolvers=1.1.1.1:53,8.8.8.8:53"
      - "--certificatesresolvers.{{ traefik_acme_resolver }}.acme.caserver={{ traefik_acme_server }}"
    env:
      - name: CF_DNS_API_TOKEN
        valueFrom:
          secretKeyRef:
            name: cloudflare-api-token
            key: api-token
    # Persistence disabled - using cert-manager for TLS certificates
    persistence:
      enabled: false

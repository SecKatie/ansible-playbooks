---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: radarr
  namespace: {{ media_namespace }}
  labels:
    app.kubernetes.io/name: radarr
    app.kubernetes.io/instance: radarr
    app.kubernetes.io/part-of: media
    app.kubernetes.io/component: pvr
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "Radarr PVR for movies (no VPN)"
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: radarr
      app.kubernetes.io/instance: radarr
  replicas: 1
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: radarr
        app.kubernetes.io/instance: radarr
        app.kubernetes.io/part-of: media
        app.kubernetes.io/component: pvr
        app.kubernetes.io/managed-by: ansible
    spec:
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 100
              preference:
                matchExpressions:
                  - key: node-role.kubernetes.io/control-plane
                    operator: DoesNotExist
      containers:
        - name: radarr
          image: linuxserver/radarr:{{ radarr_version }}
          env:
            - name: PUID
              value: "{{ media_puid }}"
            - name: PGID
              value: "{{ media_pgid }}"
            - name: TZ
              value: "{{ media_timezone }}"
          ports:
            - containerPort: 7878
              name: http
              protocol: TCP
          resources:
            requests:
              cpu: {{ radarr_cpu_request }}
              memory: {{ radarr_memory_request }}
            limits:
              cpu: {{ radarr_cpu_limit }}
              memory: {{ radarr_memory_limit }}
          volumeMounts:
            - name: config
              mountPath: /config
            - name: media
              mountPath: /media
          livenessProbe:
            httpGet:
              path: /ping
              port: 7878
            initialDelaySeconds: 60
            periodSeconds: 30
            timeoutSeconds: 10
            failureThreshold: 5
          readinessProbe:
            httpGet:
              path: /ping
              port: 7878
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3
      volumes:
        - name: config
          persistentVolumeClaim:
            claimName: radarr-config-pvc
        - name: media
          persistentVolumeClaim:
            claimName: sonarr-media-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: radarr
  namespace: {{ media_namespace }}
  labels:
    app.kubernetes.io/name: radarr
    app.kubernetes.io/instance: radarr
    app.kubernetes.io/part-of: media
    app.kubernetes.io/component: pvr
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "Radarr PVR service"
spec:
  type: ClusterIP
  ports:
    - port: 7878
      targetPort: 7878
      protocol: TCP
      name: http
  selector:
    app.kubernetes.io/name: radarr
    app.kubernetes.io/instance: radarr

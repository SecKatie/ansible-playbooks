---
apiVersion: traefik.io/v1alpha1
kind: ServersTransport
metadata:
  name: kubernetes-dashboard-transport
  namespace: {{ k8s_dashboard_namespace }}
spec:
  insecureSkipVerify: true
---
apiVersion: traefik.io/v1alpha1
kind: IngressRoute
metadata:
  name: kubernetes-dashboard
  namespace: {{ k8s_dashboard_namespace }}
  labels:
    app.kubernetes.io/name: kubernetes-dashboard
    app.kubernetes.io/managed-by: ansible
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`{{ k8s_dashboard_ingress_host }}`)
      kind: Rule
      services:
        - name: {{ k8s_dashboard_release_name }}-kong-proxy
          port: {{ k8s_dashboard_service_port }}
          scheme: https
          serversTransport: kubernetes-dashboard-transport
  tls:
    certResolver: {{ k8s_dashboard_tls_cert_resolver }}
    domains:
      - main: {{ k8s_dashboard_tls_domain }}
        sans:
          - "*.{{ k8s_dashboard_tls_domain }}"

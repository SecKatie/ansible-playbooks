---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: agate
  namespace: {{ agate_namespace }}
  labels:
    app.kubernetes.io/name: agate
    app.kubernetes.io/instance: agate
    app.kubernetes.io/component: server
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "Agate Gemini protocol server"
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: agate
      app.kubernetes.io/instance: agate
  replicas: 1
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app.kubernetes.io/name: agate
        app.kubernetes.io/instance: agate
        app.kubernetes.io/component: server
        app.kubernetes.io/managed-by: ansible
    spec:
      affinity:
        nodeAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
            - weight: 100
              preference:
                matchExpressions:
                  - key: node-role.kubernetes.io/control-plane
                    operator: DoesNotExist
      securityContext:
        fsGroup: 1000
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: agate
          image: {{ agate_image }}:{{ agate_version }}
          args:
            - --hostname
            - "{{ agate_hostname }}"
            - --lang
            - "{{ agate_lang }}"
{% for arg in agate_extra_args %}
            - "{{ arg }}"
{% endfor %}
          ports:
            - containerPort: {{ agate_port }}
              name: gemini
              protocol: TCP
          resources:
            requests:
              cpu: {{ agate_cpu_request }}
              memory: {{ agate_memory_request }}
            limits:
              cpu: {{ agate_cpu_limit }}
              memory: {{ agate_memory_limit }}
          securityContext:
            runAsUser: 1000
            runAsNonRoot: true
            allowPrivilegeEscalation: false
          volumeMounts:
            - name: content
              mountPath: /gmi
              subPath: data
            - name: certs
              mountPath: /certs
              subPath: data
      volumes:
        - name: content
          persistentVolumeClaim:
{% if agate_nfs_enabled %}
            claimName: agate-nfs-content-pvc
{% else %}
            claimName: agate-content-pvc
{% endif %}
        - name: certs
          persistentVolumeClaim:
            claimName: agate-certs-pvc
---
apiVersion: v1
kind: Service
metadata:
  name: agate
  namespace: {{ agate_namespace }}
  labels:
    app.kubernetes.io/name: agate
    app.kubernetes.io/instance: agate
    app.kubernetes.io/component: server
    app.kubernetes.io/managed-by: ansible
  annotations:
    app.kubernetes.io/description: "Agate Gemini server service"
spec:
  type: {{ agate_service_type }}
  ports:
    - port: {{ agate_port }}
      targetPort: {{ agate_port }}
      protocol: TCP
      name: gemini
  selector:
    app.kubernetes.io/name: agate
    app.kubernetes.io/instance: agate

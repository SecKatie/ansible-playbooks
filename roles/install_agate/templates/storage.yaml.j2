---
# PVC for Agate content (Gemini pages)
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: agate-content-pvc
  namespace: {{ agate_namespace }}
  labels:
    app.kubernetes.io/name: agate
    app.kubernetes.io/instance: agate
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ agate_storage_class }}
  resources:
    requests:
      storage: {{ agate_content_storage }}
---
# PVC for Agate certificates (auto-generated TLS certs)
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: agate-certs-pvc
  namespace: {{ agate_namespace }}
  labels:
    app.kubernetes.io/name: agate
    app.kubernetes.io/instance: agate
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: {{ agate_storage_class }}
  resources:
    requests:
      storage: {{ agate_certs_storage }}
{% if agate_nfs_enabled %}
---
# NFS Persistent Volume for content (optional)
apiVersion: v1
kind: PersistentVolume
metadata:
  name: agate-nfs-content-pv
  labels:
    app.kubernetes.io/name: agate
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  capacity:
    storage: {{ agate_nfs_storage }}
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: nfs-gemini
  nfs:
    server: {{ agate_nfs_server }}
    path: {{ agate_nfs_path }}
---
# PVC for NFS content
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: agate-nfs-content-pvc
  namespace: {{ agate_namespace }}
  labels:
    app.kubernetes.io/name: agate
    app.kubernetes.io/component: storage
    app.kubernetes.io/managed-by: ansible
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: nfs-gemini
  resources:
    requests:
      storage: {{ agate_nfs_storage }}
{% endif %}

---
# Paperless-ngx Secrets Configuration
# Copy this file to secrets.yml and fill in your values
# DO NOT commit secrets.yml to git!

# PostgreSQL database credentials
postgres_user: "paperless"
postgres_password: "CHANGE_ME_generate_with_openssl_rand_base64_24"

# Paperless admin account (created on first run)
admin_user: "admin"
admin_password: "CHANGE_ME_use_a_strong_password"
admin_email: "admin@example.com"

# Secret key for Django (generate with: openssl rand -base64 64 | tr -d '\n')
secret_key: "CHANGE_ME_generate_with_openssl_rand_base64_64"

# Cloudflare Tunnel credentials (optional)
# Leave empty to skip tunnel setup and use port-forwarding instead
# To get these credentials:
#   1. cloudflared tunnel create paperless-tunnel
#   2. Copy the JSON content from ~/.cloudflared/<tunnel-id>.json
#   3. Add the hostname in Cloudflare dashboard: paperless.mulliken.net -> paperless-tunnel
tunnel_credentials: ""
# Example with credentials:
# tunnel_credentials: |
#   {"AccountTag":"xxx","TunnelSecret":"xxx","TunnelID":"xxx"}

# Proton Mail Bridge credentials (optional)
# Leave empty to disable email integration
# These credentials are obtained AFTER initializing the Proton Mail Bridge.
# See setup instructions in CLAUDE.md under "Proton Mail Bridge Setup"
#
# Your Proton email address used for the bridge
proton_email: ""
# The bridge-generated password (NOT your Proton account password!)
# Get this from the bridge CLI using the 'info' command after login
proton_bridge_password: ""
